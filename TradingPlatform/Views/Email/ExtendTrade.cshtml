@model TradingPlatform.Models.NotifyModels.ExtendTrade
@{
    ViewBag.UserName = Model.UserName;
    ViewBag.Lang = Model.Lang;
    Layout = "~/Views/Email/_LayoutMail.cshtml";
}

<div>
    <p>
        @LocalText.Inst.Get("email", "EmailTemplate.BiddingParticipants", "Шановні учасники торгів", "Уважаемые участники торгов", Model.Lang) № <span class="mail-important-info">@Model.TradeNumber</span>!
    </P>
    <p>
        @LocalText.Inst.Get("email", "EmailTemplate.SalesContinued", "Повідомляємо, що торги продовжено", "Сообщаем, что торги продлены", Model.Lang) на
        <span class="mail-important-info">@Model.Min</span> @LocalText.Inst.Get("email", "EmailTemplate.Minutes", "хвилин", "минут", Model.Lang).
    </p>
</div>

